<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
		<link rel="stylesheet" type="text/css" href="../css/style.css">
		<title>Snippets</title>
	</head>
	<body>
		<div class="page-wrap">
			<header class="page-header">
				<h1 class="page-title">
					<a href="/">Snippets</a>
				</h1>
			</header>
			<main class="main-content">
				<h2 class="entry-title"><%= @snippet[:short] %></h2>
				<p class="entry-description"><%= @snippet[:long_info] %></p>
				<br/>
				<a class="btn btn-default" href="/edit/<%=params[:id]%>">Edit</a>
				<a class="btn btn-warning" href="/delete/<%=params[:id]%>">Delete</a>
			</main>
		</div>
	</body>	
</html>